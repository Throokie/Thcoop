    "hash": "8bb3a27a86cc0342a0c0922e39907cefdfb7de7d90b55be282641c0cd1bc5160",
    "installer": {
        "script": [
            "$msiPath = \"$dir\\Install WGestures.msi\"",
            "if (!(Test-Path $msiPath)) { throw \"安装文件不存在：$msiPath\" }",
            "Start-Process msiexec -ArgumentList @('/i', \"$msiPath\", '/qn', \"TARGETDIR=$dir\", \"INSTALLDIR=$dir\", '/norestart') -Wait -Verb RunAs -PassThru | ForEach-Object {",
            "    if ($_.ExitCode -ne 0 -and $_.ExitCode -ne 3010) { throw \"安装失败，错误代码：$($_.ExitCode)\" }",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "$msiPath = \"$dir\\Install WGestures.msi\"",
            "if (Test-Path $msiPath) {",
            "    Start-Process msiexec -ArgumentList @('/x', \"$msiPath\", '/qn', '/norestart') -Wait -Verb RunAs -PassThru | ForEach-Object {",
            "        if ($_.ExitCode -ne 0 -and $_.ExitCode -ne 3010) { throw \"卸载失败，错误代码：$($_.ExitCode)\" }",
            "    }",
            "}"
        ]
    },
    "bin": "WGestures.exe",
    "shortcuts": [
        [
            "WGestures.exe",
            "WGestures"
        ]
    ],
    "checkver": "当前版本: <span>([\\d.]+)</span>",
    "autoupdate": {
        "url": "https://www.yingdev.com/Content/Projects/WGestures/Release/$version/Install%20WGestures%20$version.zip"
    }
}